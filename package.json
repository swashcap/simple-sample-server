  "dependencies": {
    "@types/dotenv-safe": "^5.0.3",
    "clsx": "^1.0.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv-safe": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
