    "nightwatch": "^1.1.10",
    "npm-run-all": "^4.1.5",
    "preact-compat": "^3.18.4",
    "prettier": "^1.16.4",
    "react-styleguidist": "^8",
    "selenium-server": "^3.141.59",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-node": "^8.1.0",
