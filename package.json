    "wait-on": "^3.2.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "scripts": {
    "build": "yarn build:styles && run-p build:ts build:webpack",
    "build:styles": "./scripts/build-styles.sh",
    "build:ts": "tsc",
    "build:webpack": "webpack --mode production",
    "clean": "./scripts/clean.sh",
    "format": "prettier --write '*.js' '{rsg,src}/**/*.{ts,tsx}'",
    "start": "node src/server",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "watch:client": "rm -f src/client/styles.build.css && run-p watch:client:*",
    "watch:client:styles": "./scripts/watch-styles.sh",
    "watch:client:wds": "wait-on src/client/styles.build.css && webpack-dev-server",
    "watch:server": "ts-node src/server",
    "watch:ts": "tsc -w --preserveWatchOutput"
  }
}
